#!/bin/sh
set -eu

usage()
{
    echo "Usage:"
}

while getopts :rlsh: OPT
do
    case $OPT in
        l) RANDROPTION="--left-of LVDS1";
            ;;
        r) RANDROPTION="--right-of LVDS1";
	   ;;
	s) RANDROPTION="--same-as LVDS1";
            ;;
        h) usage
            ;;
        *) usage
           ;;
    esac
done

/usr/bin/xrandr --output DP1 --mode 1024x768 ${RANDROPTION} 
/usr/bin/nitrogen --restore
